<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue arbre avec sélection multiple -->
    <record id="view_limayrac_besoin_tree" model="ir.ui.view">
        <field name="name">limayrac.besoin.tree</field>
        <field name="model">limayrac.besoin</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" decoration-success="state == 'traite'" 
                  decoration-info="state == 'en_cours'" decoration-muted="state == 'annule'">
                <field name="titre"/>
                <field name="structure_id"/>
                <field name="formation_id"/>
                <field name="date"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'traite'"
                       decoration-info="state == 'en_cours'"
                       decoration-danger="state == 'nouveau'"
                       decoration-muted="state == 'annule'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Pivot - Tableau croisé Formation x Entreprise -->
    <record id="view_limayrac_besoin_pivot" model="ir.ui.view">
        <field name="name">limayrac.besoin.pivot</field>
        <field name="model">limayrac.besoin</field>
        <field name="arch" type="xml">
            <pivot string="Analyse Besoins" sample="1">
                <field name="formation_id" type="row"/>
                <field name="structure_id" type="col"/>
                <field name="state" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Vue Graphique -->
    <record id="view_limayrac_besoin_graph" model="ir.ui.view">
        <field name="name">limayrac.besoin.graph</field>
        <field name="model">limayrac.besoin</field>
        <field name="arch" type="xml">
            <graph string="Besoins par Formation" type="bar" sample="1">
                <field name="formation_id"/>
                <field name="state" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_limayrac_besoin_kanban" model="ir.ui.view">
        <field name="name">limayrac.besoin.kanban</field>
        <field name="model">limayrac.besoin</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="titre"/>
                <field name="structure_id"/>
                <field name="formation_id"/>
                <field name="state"/>
                <field name="date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="titre"/></strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="formation_id"/>
                                <br/>
                                <field name="structure_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_limayrac_besoin_form" model="ir.ui.view">
        <field name="name">limayrac.besoin.form</field>
        <field name="model">limayrac.besoin</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" 
                           options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="titre"/>
                            <field name="formation_id"/>
                            <field name="structure_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="view_limayrac_besoin_search" model="ir.ui.view">
        <field name="name">limayrac.besoin.search</field>
        <field name="model">limayrac.besoin</field>
        <field name="arch" type="xml">
            <search>
                <field name="titre"/>
                <field name="structure_id"/>
                <field name="formation_id"/>
                <filter string="Nouveau" name="nouveau" domain="[('state', '=', 'nouveau')]"/>
                <filter string="En cours" name="en_cours" domain="[('state', '=', 'en_cours')]"/>
                <filter string="Traité" name="traite" domain="[('state', '=', 'traite')]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Formation" name="group_formation" context="{'group_by': 'formation_id'}"/>
                    <filter string="Structure" name="group_structure" context="{'group_by': 'structure_id'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action avec toutes les vues -->
    <record id="action_limayrac_besoin" model="ir.actions.act_window">
        <field name="name">Besoins</field>
        <field name="res_model">limayrac.besoin</field>
        <field name="view_mode">tree,kanban,form,pivot,graph</field>
        <field name="context">{'search_default_nouveau': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau besoin
            </p>
            <p>
                Les besoins représentent les demandes de formation des entreprises.
            </p>
            <p>
                <strong>Astuce:</strong> Utilisez la vue Pivot pour un tableau croisé Formation x Entreprise.
            </p>
        </field>
    </record>
    
    <!-- Action Tableau Pivot pour accès rapide -->
    <record id="action_limayrac_besoin_tableau" model="ir.actions.act_window">
        <field name="name">Tableau Besoins Formation</field>
        <field name="res_model">limayrac.besoin</field>
        <field name="view_mode">pivot,graph,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tableau croisé des besoins
            </p>
            <p>
                Visualisez rapidement quelles formations sont demandées par quelles entreprises.
            </p>
        </field>
    </record>
</odoo>
