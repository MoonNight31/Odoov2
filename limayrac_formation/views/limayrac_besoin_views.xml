<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue arbre -->
    <record id="view_limayrac_besoin_tree" model="ir.ui.view">
        <field name="name">limayrac.besoin.tree</field>
        <field name="model">limayrac.besoin</field>
        <field name="arch" type="xml">
            <tree>
                <field name="titre"/>
                <field name="structure_id"/>
                <field name="formation_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_limayrac_besoin_form" model="ir.ui.view">
        <field name="name">limayrac.besoin.form</field>
        <field name="model">limayrac.besoin</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" 
                           options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="titre"/>
                            <field name="formation_id"/>
                            <field name="structure_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="view_limayrac_besoin_search" model="ir.ui.view">
        <field name="name">limayrac.besoin.search</field>
        <field name="model">limayrac.besoin</field>
        <field name="arch" type="xml">
            <search>
                <field name="titre"/>
                <field name="structure_id"/>
                <field name="formation_id"/>
                <filter string="Nouveau" name="nouveau" domain="[('state', '=', 'nouveau')]"/>
                <filter string="En cours" name="en_cours" domain="[('state', '=', 'en_cours')]"/>
                <filter string="Traité" name="traite" domain="[('state', '=', 'traite')]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Formation" name="group_formation" context="{'group_by': 'formation_id'}"/>
                    <filter string="Structure" name="group_structure" context="{'group_by': 'structure_id'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_limayrac_besoin" model="ir.actions.act_window">
        <field name="name">Besoins</field>
        <field name="res_model">limayrac.besoin</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_nouveau': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau besoin
            </p>
            <p>
                Les besoins représentent les demandes de formation des entreprises.
            </p>
        </field>
    </record>
</odoo>
