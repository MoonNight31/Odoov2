<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue arbre -->
    <record id="view_limayrac_titre_rncp_tree" model="ir.ui.view">
        <field name="name">limayrac.titre.rncp.tree</field>
        <field name="model">limayrac.titre.rncp</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code_rncp"/>
                <field name="intitule"/>
                <field name="formation_id"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_limayrac_titre_rncp_form" model="ir.ui.view">
        <field name="name">limayrac.titre.rncp.form</field>
        <field name="model">limayrac.titre.rncp</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code_rncp"/>
                            <field name="intitule"/>
                        </group>
                        <group>
                            <field name="formation_id"/>
                            <field name="date_debut"/>
                            <field name="date_fin"/>
                            <field name="is_active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_limayrac_titre_rncp" model="ir.actions.act_window">
        <field name="name">Titres RNCP</field>
        <field name="res_model">limayrac.titre.rncp</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un nouveau titre RNCP
            </p>
        </field>
    </record>
</odoo>
