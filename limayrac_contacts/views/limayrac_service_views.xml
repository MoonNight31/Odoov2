<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue arbre -->
    <record id="view_limayrac_service_tree" model="ir.ui.view">
        <field name="name">limayrac.service.tree</field>
        <field name="model">limayrac.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type_service"/>
                <field name="structure_id"/>
                <field name="siret"/>
                <field name="is_active"/>
                <field name="is_blacklist"/>
                <field name="date_created"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_limayrac_service_form" model="ir.ui.view">
        <field name="name">limayrac.service.form</field>
        <field name="model">limayrac.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="type_service"/>
                            <field name="structure_id"/>
                            <field name="siret"/>
                        </group>
                        <group>
                            <field name="is_active"/>
                            <field name="is_blacklist"/>
                            <field name="date_created"/>
                            <field name="date_updated"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Personnes">
                            <field name="personne_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="poste"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="view_limayrac_service_search" model="ir.ui.view">
        <field name="name">limayrac.service.search</field>
        <field name="model">limayrac.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="type_service"/>
                <field name="structure_id"/>
                <field name="siret"/>
                <filter string="Actifs" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Liste noire" name="blacklist" domain="[('is_blacklist', '=', True)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Structure" name="group_structure" context="{'group_by': 'structure_id'}"/>
                    <filter string="Type de service" name="group_type" context="{'group_by': 'type_service'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_limayrac_service" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">limayrac.service</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau service
            </p>
            <p>
                Les services représentent les différents départements ou services au sein des structures/entreprises.
            </p>
        </field>
    </record>
</odoo>
